{
  "name": "todo-app-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter server start",
    "prepare": "husky install",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "typecheck": "pnpm --filter shared build && pnpm -r exec tsc --noEmit"
  },
  "devDependencies": {
    "typescript": "~5.7.2",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^9.22.0",
    "@eslint/js": "^9.22.0",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.26.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
