{
  "name": "todo-app-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter server start",
    "prepare": "husky install",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "typescript": "~5.7.2",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "@playwright/test": "^1.40.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
